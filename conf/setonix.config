/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/ausargph -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Setonix profile'
    config_profile_description = 'COnfiguration to run on Setonix supercomputer at Pawsey'

    // Limit resources so that this can run on GitHub Actions
    // Max resource options
    // Defaults only, expecting to be overwritten
    max_memory                 = '128.GB'
    max_cpus                   = 16
    max_time                   = '48.h'
}

singularity {
    //cacheDir = "$HOME/singularity_cache/"
    cacheDir = "/scratch/director2172/ziadbkh/singularity/"
    enabled = true

}
process {
    executor = 'slurm'
    beforeScript = 'module load singularity/3.8.6'
    queue = 'work'
    
    

}